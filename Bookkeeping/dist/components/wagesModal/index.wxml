<block wx:if="{{$taroCompReady}}">
    <view>
        <block wx:if="{{display}}">
            <view class="wagesModal">
                <view class="wagesModal-content">
                    <view class="wagesModal-content-heard">
                        <view>
                            <view class="tab">
                                <block wx:if="{{tab === 0}}">
                                    <view class="lookWages" bindtap="anonymousFunc0">查看工资标准
                                        <view class="setWages" catchtap="anonymousFunc1">设置工资标准</view>
                                    </view>
                                </block>
                                <block wx:if="{{tab === 1}}">
                                    <view class="setWagesClick" catchtap="anonymousFunc2">查看工资标准
                                        <view class="lookWagesClick" bindtap="anonymousFunc3">设置工资标准</view>
                                    </view>
                                </block>
                            </view>
                            <view bindtap="funPrivateidzzz" class="wagesModal-content-close">X</view>
                        </view>
                    </view>
                    <view class="content">
                        <block wx:if="{{tab === 0}}">
                            <view>
                                <view class="worker">
                                    <view class="worker-title">
                                        <view>选择工人(已选择[{{clickModalNum}}]人)</view>
                                        <view>
                                            <view class="allChange" bindtap="funPrivateiezzz">全选</view>
                                            <view class="change">(已选{{clickModalNum}}人)</view>
                                        </view>
                                    </view>
                                    <block wx:if="{{data && data.length > 0}}">
                                        <view class="wagesModal-personnel">
                                            <view class="wagesModal-personnel-box" wx:key="id" bindtap="anonymousFunc4" wx:for="{{loopArray40}}" wx:for-item="v" wx:for-index="__index4" data-e-tap-so="this" data-e-tap-a-a="{{v._$indexKey}}">
                                                <view class="background">
                                                    <view class="{{v.$loopState__temp2}}">{{v.$loopState__temp4}}</view>
                                                    <view class="names">{{v.$original.name}}</view>
                                                </view>
                                                <view class="{{v.$original.set ? '' : 'list-icon'}}"></view>
                                            </view>
                                        </view>
                                    </block>
                                </view>
                                <view class="wagesModal-standard">
                                    <view class="wagesModal-standard-flex">
                                        <view>工资标准</view>
                                        <view class="wagesModal-standard-flex-add" bindtap="funPrivateigzzz">+添加其他标准</view>
                                    </view>
                                    <view class="wagesModal-standard-box">
                                        <view class="wagesModal-standard-box-list" wx:for="{{loopArray41}}" wx:for-item="v" wx:for-index="i">
                                            <view class="wagesModal-standard-box-list-title">{{i == 0 ? '默认工资模板1' : '默认工资模板2'}}</view>
                                            <view class="wagesModal-standard-box-list-flex">
                                                <view>
                                                    <checkbox class="checkbox" checked="{{v.$original.click}}" value="{{v.$original.click}}" bindtap="anonymousFunc5" data-e-tap-so="this" data-e-tap-a-a="{{v._$indexKey2}}"></checkbox>
                                                </view>
                                                <view class="wagesModal-standard-box-list-flex-middle">
                                                    <view>上班标准：{{v.$original.worktime_define}}小时算1个工<text>{{v.$original.money}}</text>/个工</view>
                                                    <view>加班标准：{{v.$original.overtime_type === '1' ? '按小时算' : '按天算'}} {{v.$original.overtime_type == '1' ? '加班' + v.$original.overtime_money + '/小时' : '加班 ' + v.$original.overtime + '小时算1个工'}}</view>
                                                </view>
                                                <view>
                                                    <view class="wagesModal-standard-box-list-edit" bindtap="anonymousFunc6" data-e-tap-so="this" data-e-tap-a-a="{{v._$indexKey3}}">修改</view>
                                                </view>
                                            </view>
                                        </view>
                                    </view>
                                    <view class="wagesModal-footer">
                                        <view class="wagesModal-footer-btn" bindtap="funPrivateijzzz">确定设置({{clickModalNum}}人)</view>
                                    </view>
                                </view>
                            </view>
                        </block>
                        <block wx:if="{{tab === 1}}">
                            <view class="wagesModal-standard-box-look">
                                <block wx:if="{{moneyList.length === 0}}">
                                    <view class="noData">
                                        <view class="noData-no">暂未设置工资标准</view>
                                    </view>
                                </block>
                                <view class="wagesModal-standard-box-list" wx:key="id" wx:for="{{loopArray42}}" wx:for-item="v" wx:for-index="__index7">
                                    <view class="wagesModal-standard-box-list-look-title">{{v.$original.worker_name}}</view>
                                    <view class="wagesModal-standard-box-list-flex">
                                        <view class="wagesModal-standard-box-list-flex-look-left">
                                            <view class="wagesModal-standard-box-list-flex-look-left-list">上班 <text class="wagesModal-standard-box-list-flex-look-left-list-color">{{v.$original.worktime_define}}小时算1个工<text class="red">{{v.$original.money}}</text>元/个工</text>
                                            </view>
                                            <view>加班 <text>{{v.$original.overtime_type === '1' ? '按小时算' : '按天算'}}  {{v.$original.overtime_type == '1' ? '加班' + v.$original.overtime_money + '/小时' : '加班 ' + v.$original.overtime + '小时算1个工'}} </text>
                                            </view>
                                        </view>
                                        <view class="wagesModal-standard-box-list-look-edit-box">
                                            <view class="wagesModal-standard-box-list-edit" bindtap="anonymousFunc7" data-e-tap-so="this" data-e-tap-a-a="{{v._$indexKey4}}">修改</view>
                                        </view>
                                    </view>
                                </view>
                            </view>
                        </block>
                    </view>
                </view>
            </view>
        </block>
    </view>
</block>