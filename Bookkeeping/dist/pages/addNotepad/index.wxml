<block wx:if="{{$taroCompReady}}">
    <view class="addnotepad">
        <view class="time">{{model && model.time}}</view>
        <view class="notepad-textarea">
            <textarea id="textarea" focus="{{true}}" auto-focus="{{true}}" cursor="{{0}}" maxlength="{{400}}" bindinput="anonymousFunc0" class="{{id ? 'editTextarea' : 'textarea'}}" value="{{model && model.note}}" placeholder="在这里记事" placeholder-style="color:#BEBEBE"></textarea>
        </view>
        <view>
            <view class="image">
                <image-view compid="{{$compid__43}}"></image-view>
            </view>
        </view>
        <view class="footerbtn">
            <view class="footerbtn-btn" bindtap="anonymousFunc1">保存</view>
        </view>
    </view>
</block>