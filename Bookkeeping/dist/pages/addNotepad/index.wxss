.addnotepad {
  height: 100vh;
  width: 100%;
}
.footer {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  background: #EBEBEB;
  width: 100%;
}
.footer-box {
  padding: 38rpx 60rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  color: #373737;
  font-size: 36rpx;
}
.editTextarea {
  padding: 30rpx;
  padding-top: 10rpx;
  width: auto;
}
.textarea {
  padding: 30rpx;
  padding-top: 10rpx;
  width: auto;
}
.footer-box-left {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  line-height: 67rpx;
  font-size: 36rpx;
  color: #373737;
}
.footer-box-left-img {
  margin: auto 0;
  height: 49rpx;
  width: 59rpx;
  margin-right: 24rpx;
}
.footer-box-left-img-img {
  height: 49rpx;
  width: 59rpx;
  background-size: contain;
}
.footer-box-right {
  width: 160rpx;
  height: 67rpx;
  line-height: 67rpx;
  color: #fff;
  text-align: center;
  background: #0099ff;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
}
.time {
  color: #BEBEBE;
  font-size: 26rpx;
  padding-top: 20rpx;
  padding-left: 30rpx;
}
.image {
  display: block;
}
.footerbtn {
  width: 100%;
  margin-top: 200rpx;
}
.footerbtn-btn {
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  background: #0099ff;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  margin: 0 auto;
}