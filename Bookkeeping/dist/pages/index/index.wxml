<block wx:if="{{$taroCompReady}}">
    <view class="index-content">
        <image src="{{image}}" class="{{closeImage ? 'noImages' : 'images'}}" bindtap="anonymousFunc0"></image>
        <view class="top">
            <image src="{{IMGCDNURL + 'background.png'}}" class="top_img"></image>
            <view class="heard">
                <view class="heard-left">
                    <picker start="{{start}}" mode="date" fields="month" bindchange="anonymousFunc1" value="{{vals}}">
                        <block wx:if="{{newMonth > start}}">
                            <image src="{{IMGCDNURL + 'left.png'}}" class="leftIcon"></image>
                        </block>{{month}}月
                        <block wx:if="{{newMonth < start}}">
                            <image class="righticon" src="{{IMGCDNURL + 'right.png'}}"></image>
                        </block>
                    </picker>
                </view>
                <block>
                    <block wx:if="{{type === 1}}">
                        <view class="heard-middle">我是班组长<text class="switch" bindtap="anonymousFunc2"><text class="test"></text>切换</text>
                        </view>
                    </block>
                    <block wx:else>
                        <view class="heard-middle">我是工人<text class="switch" bindtap="anonymousFunc3"><text class="test"></text>切换</text>
                        </view>
                    </block>
                </block>
                <view bindtap="anonymousFunc4" class="cloud">
                    <block wx:if="{{item && !show}}">
                        <at-badge compid="{{$compid__784}}"></at-badge>
                    </block>
                    <image src="{{IMGCDNURL + 'cloud.png'}}" class="heard-right"></image>
                </view>
            </view>
            <view bindtap="anonymousFunc5">
                <view class="moneyList">
                    <view>
                        <image class="moneyIcon" src="{{IMGCDNURL + 'money.png'}}"></image>工钱</view>
                    <view>
                        <image class="moneyIconPay" src="{{IMGCDNURL + 'money1.png'}}"></image>借支</view>
                </view>
                <view class="money">
                    <view>{{item && item.money || 0}}</view>
                    <view>{{item && item.borrow || 0}}</view>
                </view>
                <view class="typeList">
                    <view>上班<text class="num">{{item && item.work_time || 0}}</text>
                    </view>
                    <view>加班<text class="num">{{item && item.overtime || 0}}个工</text>
                    </view>
                    <view>按量记
                        <block wx:if="{{item.amount.type === 0}}"><text class="num">0笔</text>
                        </block>
                        <block wx:if="{{item.amount.type === 1}}"><text class="num">{{item.amount.unit_num}}{{item.amount.unit}}</text>
                        </block>
                        <block wx:if="{{item.amount.type === 2}}"><text class="num">{{item.amount.count}}</text>
                        </block>
                    </view>
                </view>
            </view>
            <view class="yun">
                <image class="yun-img" src="{{IMGCDNURL + 'backgroundCloud.png'}}"></image>
            </view>
            <view class="recordBox">
                <view class="eventList">
                    <view class="eventList-left" bindtap="anonymousFunc6">
                        <view class="eventList-icon">
                            <image class="eventList-icon-image" src="{{IMGCDNURL + 'recorder.png'}}"></image>
                        </view>
                        <view>记工流水</view>
                    </view>
                    <view class="" bindtap="anonymousFunc7">
                        <view class="eventList-icon-attendance">
                            <image class="eventList-icon-attendance-image" src="{{IMGCDNURL + 'attendance.png'}}"></image>
                        </view>
                        <view class="">考勤表</view>
                    </view>
                </view>
                <view class="btnBox">
                    <view class="btn">
                        <block>
                            <block wx:if="{{item && item.business_list.data.length === 0}}"><text bindtap="anonymousFunc8"> 记工<text class="btn-title">(点工 包工 借支)</text></text>
                            </block>
                            <block wx:else><text bindtap="anonymousFunc9"> 再记一笔<text class="btn-title" bindtap="anonymousFunc10">(点工 包工 借支)</text></text>
                            </block>
                        </block>
                    </view>
                    <view class="notepad">
                        <view class="notepad-Icon">
                            <image class="notepad-Icon-iamge" src="{{IMGCDNURL + 'notepad.png'}}"></image>
                        </view>
                        <view bindtap="anonymousFunc11">记事本</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="content">
            <view class="backgroundCloud"></view>
            <view class="content-title">今日 <text class="content-time">{{time}} {{week}}</text>
            </view>
            <block wx:if="{{busy}}">
                <view class="busyBox">
                    <view>系统繁忙，刷新试试</view>
                    <view class="refresh">刷新</view>
                </view>
            </block>
            <block wx:if="{{type === 1 && list.length > 0 && !busy}}">
                <view>
                    <scroll-view class="content-list-box" scroll-y="{{true}}" refresher-enabled="{{true}}" lower-threshold="{{200}}" bindscrolltolower="anonymousFunc12">
                        <view wx:key="$loopState__temp2" class="content-list" bindtap="anonymousFunc13" wx:for="{{loopArray328}}" wx:for-item="v" wx:for-index="i" data-e-tap-so="this" data-e-tap-a-a="{{v._$indexKey}}">
                            <view>
                                <view class="content-list-flex">
                                    <view>{{v.$original.workername}}</view>
                                    <view class="orgion">¥{{v.$original.money}}</view>
                                </view>
                                <view class="details">我在[{{v.$original.group_info}}]项目组对{{v.$original.workername}}记了-笔包工</view>
                            </view>
                        </view>
                    </scroll-view>
                </view>
            </block>
            <block wx:if="{{type === 2 && list.length > 0 && !busy}}">
                <view>
                    <scroll-view class="content-list-box" scroll-y="{{true}}" refresher-enabled="{{true}}" lower-threshold="{{200}}" bindscrolltolower="anonymousFunc14">
                        <view wx:key="$loopState__temp4" class="content-list-type" bindtap="anonymousFunc15" wx:for="{{loopArray329}}" wx:for-item="v" wx:for-index="i" data-e-tap-so="this" data-e-tap-a-a="{{v._$indexKey2}}">
                            <view class="content-list-flex">
                                <view class="details">我在[{{v.$original.group_info}}]项目组对Ta记了-笔包工</view>
                                <view class="orgion-type">¥{{v.$original.money}}</view>
                            </view>
                        </view>
                    </scroll-view>
                </view>
            </block>
            <block wx:if="{{item && list.length === 0 && !busy}}">
                <view class="content-noList">
                    <view>您今天还没有记工~</view>
                    <view>点击上方[记工]按钮，开始记工</view>
                </view>
            </block>
        </view>
        <view class="jumpBox">
            <view class="jumpItem" bindtap="anonymousFunc16">
                <view class="ptBox">
                    <view class="jumpItem-icon">
                        <image class="jumpItem-icon-image" src="{{IMGCDNURL + 'work.png'}}"></image>
                    </view>
                    <view class="jumpItem-title">意见</view>
                </view>
            </view>
            <view class="jumpItem">
                <view class="ptBox">
                    <view class="jumpItem-icon-goback">
                        <image class="jumpItem-icon-goback-image" src="{{IMGCDNURL + 'goBack.png'}}"></image>
                    </view>
                    <view class="jumpItem-title" bindtap="anonymousFunc17">鱼泡网</view>
                </view>
            </view>
        </view>
        <at-modal compid="{{$compid__785}}">
            <view class="AtModal">
                <view class="AtModal-top">当前是<text class="atModal-name">【班组长】</text>身份</view>
                <view class="mtList">与上一次记工身份不一致，是否<text class="atModal-change">切换?</text>
                </view>
                <view class="atModal-list" bindtap="anonymousFunc18">不切换</view>
                <view class="atModal-list" bindtap="anonymousFunc19">切换成【工人】</view>
                <view class="atModal-list" bindtap="anonymousFunc20">不再提醒</view>
            </view>
        </at-modal>
        <at-modal compid="{{$compid__786}}">
            <view class="useAtModal">
                <view class="useAtModal-title">请根据需要选择您的身份</view>
                <view class="useAtModal-tips">温馨提示：选对身份，才能使用想要的功能哦</view>
                <view class="useAtModal-box">
                    <view bindtap="anonymousFunc21">
                        <view class="useAtModal-monitor">
                            <image class="useAtModal-monitor-img" src="{{IMGCDNURL + 'banzhu.png'}}"></image>
                        </view>
                        <view class="useAtModal-blued">我是班组长</view>
                        <view>对工人记工</view>
                        <view class="useAtModal-look">查看工人的考勤表</view>
                    </view>
                    <view bindtap="anonymousFunc22">
                        <view class="useAtModal-worker">
                            <image class="useAtModal-worker-img" src="{{IMGCDNURL + 'gongren.png'}}"></image>
                        </view>
                        <view class="useAtModal-blued">我是工人</view>
                        <view>对自己记工</view>
                        <view class="useAtModal-look">查看自己的考勤表</view>
                    </view>
                </view>
            </view>
        </at-modal>
        <auth compid="{{$compid__787}}"></auth>
        <create-project compid="{{$compid__788}}"></create-project>
        <project-modal compid="{{$compid__789}}"></project-modal>
    </view>
</block>