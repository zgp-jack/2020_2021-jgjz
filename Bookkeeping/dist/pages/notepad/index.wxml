<block wx:if="{{$taroCompReady}}">
    <block>
        <view class="notepad">
            <view class="searchBar">
                <at-search-bar compid="{{$compid__39}}"></at-search-bar>
            </view>
            <block wx:if="{{data.length === 0}}">
                <view class="content">
                    <view class="noData">
                        <view>您今天还没有填写过记事本哦~</view>
                        <view>点击下方<text class="blued">记事</text>按钮，添加您的记事信息</view>
                    </view>
                </view>
            </block>
            <block wx:if="{{busy}}">
                <view class="busyBox">
                    <view>系统繁忙，刷新试试</view>
                    <view class="refresh">刷新</view>
                </view>
            </block>
            <block wx:if="{{data.length > 0 && !busy}}">
                <view class="dataMT">
                    <view class="dataContent" wx:key="id" bindtap="anonymousFunc2" wx:for="{{loopArray33}}" wx:for-item="v" wx:for-index="__index2" data-e-tap-so="this" data-e-tap-a-a="{{v._$indexKey}}">
                        <view class="timeTop">
                            <view class="timeTop-time">{{v.$original.time}}</view>
                            <view class="timeTop-week">{{v.$original.week}}</view>
                        </view>
                        <view class="dataContent-details"><text class="dataContent-details-title">{{v.$original.note}}</text>
                            <block wx:if="{{v.$original.view_images.length > 0}}">
                                <view class="flex">
                                    <view class="dataContent-imageList" wx:for="{{v.$original.view_images}}" wx:for-item="item" wx:for-index="_anonIdx2">
                                        <view class="dataContent-imageList-image">
                                            <image src="{{item.httpurl}}" class="image"></image>
                                        </view>
                                    </view>
                                </view>
                            </block>
                            <view class="dataContent-imageList-footer">
                                <view class="dataContent-imageList-time">{{v.$original.creatTime}}</view>
                                <view>
                                    <block wx:if="{{del}}">
                                        <checkbox checked="{{v.$original.click}}" value="{{v.$original.click}}" catchtap="anonymousFunc3" class="checkboxButton-checkbox" color="#0099FF" data-e-tap-so="this" data-e-tap-a-a="{{v._$indexKey2}}"></checkbox>
                                    </block>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </block>
            <block wx:if="{{!del}}">
                <view class="footer">
                    <view class="footer-btn" bindtap="anonymousFunc4">记事</view>
                </view>
            </block>
            <block wx:if="{{!del && data.length > 0}}">
                <view class="checkbox-notepad" bindtap="anonymousFunc5">
                    <view class="checkbox-box">
                        <view class="checkbox-image">
                            <image class="checkbox-image-image" src="{{IMGCDNURL + 'checkout.png'}}"></image>
                        </view>全选</view>
                </view>
            </block>
            <block wx:if="{{del}}">
                <view class="checkboxButton">
                    <view class="checkboxButton-box">
                        <view>
                            <checkbox value="" checked="{{selectAll}}" bindtap="anonymousFunc6" class="checkboxButton-checkbox" color="#0099FF"></checkbox>多选</view>
                        <view class="checkboxButton-right">
                            <view class="checkboxButton-del" bindtap="anonymousFunc7">批量删除</view>
                            <view class="checkboxButton-close" bindtap="anonymousFunc8">取消</view>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </block>
</block>